{
  "name": "gitnews-menubar",
  "version": "1.0.0",
  "description": "GitHub notifications in your menu bar",
  "productName": "Gitnews",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build": "npm run build:osx",
    "build:osx": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=gitnews-menubar.icns --prune=true --out=dist",
    "package": "npm run package:osx",
    "package:osx": "hdiutil create -format UDZO -srcfolder dist/Gitnews-darwin-x64/Gitnews.app dist/Gitnews_Mac.dmg",
    "test": "mocha tests"
  },
  "keywords": [
    "menu",
    "github",
    "notifications"
  ],
  "author": "Payton Swick <payton@foolord.com>",
  "license": "MIT",
  "dependencies": {
    "conf": "^1.0.0",
    "date-fns": "^1.28.4",
    "debug": "^2.6.6",
    "dotenv": "^4.0.0",
    "electron": "^1.6.6",
    "electron-fetch": "^1.0.0",
    "electron-is-dev": "^0.1.2",
    "electron-unhandled": "^0.1.1",
    "gitnews": "^2.0.0",
    "gridicons": "1.1.0",
    "menubar": "^5.2.3",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "semver": "^5.3.0"
  },
  "devDependencies": {
    "chai": "^4.0.0",
    "electron-packager": "^8.7.0",
    "eslint": "^3.19.0",
    "eslint-config-wpcalypso": "^0.8.0",
    "eslint-plugin-wpcalypso": "^3.2.0",
    "mocha": "^3.4.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sirbrillig/gitnews-menubar.git"
  },
  "bugs": {
    "url": "https://github.com/sirbrillig/gitnews-menubar/issues"
  },
  "homepage": "https://github.com/sirbrillig/gitnews-menubar#readme"
}
